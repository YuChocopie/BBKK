<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="@dimen/size46"
  android:background="@color/white5"
  app:layout_constraintTop_toTopOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintEnd_toEndOf="parent">
  <ImageView
    android:id="@+id/iv_menu_button"
    android:layout_width="@dimen/size19"
    android:layout_height="@dimen/size16"
    android:src="@drawable/icon_bar"
    android:layout_marginStart="@dimen/size30"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
  <ImageView
    android:layout_width="@dimen/size24"
    android:layout_height="@dimen/size20"
    android:src="@drawable/icon_heart"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
  <TextView
    android:id="@+id/tv_back_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:lineSpacingExtra="8sp"
    android:text="@string/header_back"
    android:layout_marginEnd="@dimen/size30"
    android:textSize="@dimen/text_size16"
    android:textColor="@color/black77"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
  <View
    android:layout_width="@dimen/match_parent"
    android:layout_height="@dimen/size1"
    android:background="@color/gray11"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>