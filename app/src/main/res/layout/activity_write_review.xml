<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@color/white5"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical">
  <android.support.constraint.ConstraintLayout
    android:id="@+id/cl_review_write_header_bar"
    android:layout_width="match_parent"
    android:background="@color/white5"
    android:layout_height="@dimen/size46">
    <TextView
      android:id="@+id/tv_back_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:textSize="16sp"
      android:textColor="@color/black77"
      android:lineSpacingExtra="3sp"
      android:text="이전"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />
    <TextView
      android:id="@+id/tv_review"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textColor="@color/black77"
      android:lineSpacingExtra="3sp"
      android:text="댓글"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
    <TextView
      android:id="@+id/tv_review_write_check"
      android:layout_width="wrap_content"
      android:layout_marginEnd="30dp"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textColor="@color/black77"
      android:lineSpacingExtra="3sp"
      android:text="확인"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
    <View
      android:layout_width="@dimen/match_parent"
      android:layout_height="@dimen/size2"
      android:background="@color/gray11"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cl_main_info_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white5"
    app:layout_constraintTop_toBottomOf="@id/cl_review_write_header_bar">

    <TextView
      android:id="@+id/tv_main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size30"
      android:text="달콤한 꿀팁"
      android:textColor="@color/red1"
      android:textSize="@dimen/text_size20"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tv_main_counter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size8"
      android:text="서울의 사계절을 즐기는 꿀팁"
      android:textColor="@color/gray22"
      android:textSize="@dimen/text_size12"
      app:layout_constraintBottom_toBottomOf="@id/tv_main_title"
      app:layout_constraintStart_toEndOf="@+id/tv_main_title" />

    <View
      android:layout_width="@dimen/match_parent"
      android:layout_height="@dimen/size1"
      android:background="@color/gray11"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
  </android.support.constraint.ConstraintLayout>
  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:paddingTop="30dp"
    android:paddingStart="@dimen/size14"
    android:paddingEnd="@dimen/size14"
    android:paddingBottom="30dp"
    >
    <TextView
      android:id="@+id/tv_write_review_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/size20"
      android:background="@color/white5"
      android:text="코딩하는 오징어"
      android:textSize="16sp"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:textColor="@color/gray22"
      android:lineSpacingExtra="9sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
    <View
      android:id="@+id/v_underLine"
      android:layout_width="@dimen/match_parent"
      android:layout_height="@dimen/size1"
      android:background="@color/gray11"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_write_review_name"/>
    <EditText
      android:id="@+id/et_write_review"
      android:background="@color/white5"
      android:layout_width="match_parent"
      android:layout_height="@dimen/match_parent"
      android:textSize="14sp"
      android:padding="20dp"
      android:gravity="top|start"
      android:textColor="@color/gray22"
      android:hint="내용을 입력하세요."
      app:layout_constraintTop_toBottomOf="@id/v_underLine"
      app:layout_constraintBottom_toBottomOf="parent"/>



  </android.support.constraint.ConstraintLayout>
  </LinearLayout>
</android.support.design.widget.CoordinatorLayout>