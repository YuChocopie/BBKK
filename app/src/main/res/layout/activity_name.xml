<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".NameActivity">

  <TextView
    android:id="@+id/textView_start_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="50dp"
    android:text="@string/name_start_message"
    android:textSize="35sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/editText_random_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:gravity="center"
    android:inputType="date"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView_start_message"
    tools:text="더위먹은 코알라"/>

  <TextView
    android:id="@+id/textView_name_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:text="님"
    app:layout_constraintBottom_toBottomOf="@+id/editText_random_name"
    app:layout_constraintStart_toEndOf="@+id/editText_random_name"/>

  <ImageButton
    android:id="@+id/btn_name_change"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="80dp"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/textView_name_1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/textView_name_1"
    app:srcCompat="@android:color/darker_gray"/>

  <ImageButton
    android:id="@+id/btn_name_start_bbkk"
    android:layout_width="150dp"
    android:layout_height="60dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toTopOf="@+id/textView_name_bottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.435"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@android:color/darker_gray"/>

  <TextView
    android:id="@+id/textView_name_bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:gravity="center_horizontal"
    android:lineSpacingExtra="6sp"
    android:textSize="13sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:text="@string/name_next_btn_message"/>

</android.support.constraint.ConstraintLayout>