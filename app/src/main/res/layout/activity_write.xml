<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.write.WriteActivity">
  <android.support.constraint.ConstraintLayout
    android:id="@+id/cl_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size46">
    <TextView
      android:id="@+id/tv_header_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size30"
      android:text="@string/header_cancel"
      android:textColor="@color/black77"
      android:textSize="@dimen/text_size16"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
      android:layout_width="@dimen/size24"
      android:layout_height="@dimen/size20"
      android:src="@drawable/icon_heart"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
      android:id="@+id/tv_header_next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/size30"
      android:text="@string/header_next"
      android:textColor="@color/red1"
      android:textSize="@dimen/text_size16"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
    <View
      android:layout_width="@dimen/match_parent"
      android:layout_height="@dimen/size1"
      android:background="@color/gray11"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
  </android.support.constraint.ConstraintLayout>
  <com.glide.slider.library.SliderLayout
    android:id="@+id/sl_write_images"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size360"
    android:background="@color/white5"
    app:layout_constraintTop_toBottomOf="@id/cl_header"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>