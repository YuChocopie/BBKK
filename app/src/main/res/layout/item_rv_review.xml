<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@color/white5"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <TextView
    android:id="@+id/tv_review_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="코딩하는 오징어"
    android:textColor="@color/black77"
    android:textStyle="bold"
    android:layout_marginStart="@dimen/size30"
    android:layout_marginTop="@dimen/size34"
    android:textSize="@dimen/text_size12"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
  <TextView
    android:id="@+id/tv_review_best_logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_radius2_red"
    android:paddingTop="@dimen/size2"
    android:paddingBottom="@dimen/size2"
    android:paddingStart="@dimen/size4"
    android:paddingEnd="@dimen/size4"
    android:layout_marginStart="@dimen/size4"
    android:text="@string/review_best_logo"
    android:textSize="@dimen/text_size8"
    android:textStyle="bold"
    android:textColor="@color/red1"
    android:visibility="visible"
    app:layout_constraintTop_toTopOf="@id/tv_review_name"
    app:layout_constraintBottom_toBottomOf="@id/tv_review_name"
    app:layout_constraintStart_toEndOf="@id/tv_review_name"/>
  <android.support.constraint.ConstraintLayout
    android:layout_width="@dimen/size43"
    android:layout_height="@dimen/size16"
    android:background="@drawable/item_radius8_red"
    android:layout_marginStart="@dimen/size4"
    app:layout_constraintTop_toTopOf="@id/tv_review_name"
    app:layout_constraintBottom_toBottomOf="@id/tv_review_name"
    app:layout_constraintStart_toEndOf="@id/tv_review_best_logo">
    <TextView
      android:id="@+id/tv_like_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:layout_marginEnd="@dimen/size8"
      android:text="2"
      android:textColor="@color/white5"
      android:textSize="@dimen/text_size10"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
  </android.support.constraint.ConstraintLayout>
  <TextView
    android:id="@+id/tv_review_content"
    android:layout_width="@dimen/match_parent"
    android:layout_height="wrap_content"
    android:text="여기 치즈 케이크 진짜 맛있어요! 저만 아는줄 ㅋㅋㅋㅋㅋㅋㅋㅋ 여기 사장님이 옆 라멘집 사장님이랑 형제라 라멘 먹고
영수증 가져가면 아메리카노 1+1 해요 친구랑 라멘 먹고 치케 사서
한강가면 꿀 다들 해보세요"
    android:layout_marginTop="@dimen/size12"
    android:layout_marginEnd="@dimen/size30"
    android:textSize="@dimen/text_size11"
    android:textColor="@color/black77"
    android:ellipsize="none"
    android:scrollHorizontally="false"
    android:singleLine="false"
    app:layout_constraintTop_toBottomOf="@id/tv_review_name"
    app:layout_constraintStart_toStartOf="@id/tv_review_name"
    app:layout_constraintEnd_toEndOf="parent"/>
  <TextView
    android:id="@+id/tv_review_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2018. 09. 12"
    android:layout_marginTop="@dimen/size9"
    android:layout_marginBottom="@dimen/size34"
    android:textSize="@dimen/text_size11"
    android:textColor="@color/gray11"
    android:ellipsize="none"
    android:scrollHorizontally="false"
    android:singleLine="false"
    app:layout_constraintTop_toBottomOf="@id/tv_review_content"
    app:layout_constraintStart_toStartOf="@id/tv_review_name"
    app:layout_constraintBottom_toBottomOf="parent"/>
  <View
    android:layout_width="@dimen/match_parent"
    android:layout_height="@dimen/size1"
    android:background="@color/gray11"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>